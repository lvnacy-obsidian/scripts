{
  "name": "lvnacy-obsidian-scripts",
  "version": "1.0.0",
  "description": "Scripts for template, dashboard, and project automation in Obsidian.",
  "keywords": [
    "obsidian",
    "javascript",
    "templates",
    "project",
    "management"
  ],
  "homepage": "https://github.com/lvnacy-obsidian/scripts#readme",
  "bugs": {
    "url": "https://github.com/lvnacy-obsidian/scripts/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lvnacy-obsidian/scripts.git"
  },
  "license": "MIT",
  "author": "LVNACY",
  "type": "module",
  "main": "scripts.js",
  "scripts": {
    "build:snippets": "node build-snippets.js",
    "clean": "rm -rf .vscode/snippets/*.json && rm -rf test-results/ && rm -rf node_modules/.cache",
    "dev": "npm run watch:snippets",
    "doctor": "npm run lint && npm run validate -- --verbose --html-report --save-report",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint . --ext .js,.ts,.jsx,.tsx",
    "lint:build": "eslint build-snippets.js validate-main.js --fix",
    "lint:fix": "eslint . --ext .js,.ts,.jsx,.tsx --fix",
    "lint:library": "eslint library/ --ext .js,.ts,.jsx,.tsx",
    "lint:scripts": "eslint classes/ commands/ services/ utilities/ --ext .js,.ts,.jsx,.tsx",
    "lint:staged": "lint-staged",
    "precommit": "npm run lint:staged && npm run validate:strict && npm run build:snippets",
    "quality": "npm run lint && npm run validate:strict",
    "report": "npm run validate -- --html-report --save-report",
    "setup": "npm run build:snippets && echo 'âœ… Snippets built successfully!'",
    "test": "npm run lint && npm run validate",
    "test:ci": "npm run lint && npm run validate --strict --save-report",
    "test:snippets": "npm run lint:library && npm run validate:snippets",
    "test:scripts": "npm run lint:scripts && npm run validate:scripts",
    "validate": "node validate-main.js",
    "validate:verbose": "node validate-main.js --verbose",
    "validate:scripts": "node validate-main.js --no-snippets",
    "validate:snippets": "node validate-main.js --no-scripts",
    "validate:strict": "node validate-main.js --strict",
    "watch:snippets": "node build-snippets.js --watch"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@stylistic/eslint-plugin": "^5.4.0",
    "chokidar": "^3.5.3",
    "eslint": "^9.36.0"
  }
}
